<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">


    <Button
        android:id="@+id/menuButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:onClick="showPopup"
        android:text="Choose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <Switch
        android:id="@+id/glutenFreeRadio"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Gluten Frei"
        android:checked="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <Switch
        android:id="@+id/vegetarianRadio"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Vegetarisch"
        android:checked="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glutenFreeRadio" />
    <Switch
        android:id="@+id/veganRadio"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Vegan"
        android:checked="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegetarianRadio" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:id="@+id/searchButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Search"
        />

    <Button
        android:id="@+id/databaseButton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Datenbank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchButton" />




</androidx.constraintlayout.widget.ConstraintLayout>